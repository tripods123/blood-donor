<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_profile"
    android:background="@color/whiteTextColor"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/parenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">


        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/mobileImageView"
                android:src="@drawable/ic_mobile"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:text="Mobile"
                android:layout_toRightOf="@id/mobileImageView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/mobileTextView"
                android:layout_toRightOf="@id/mobileImageView"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/whiteTextColor"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/countryImageView"
                android:src="@drawable/ic_city"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:text="City"
                android:layout_toRightOf="@id/countryImageView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/cityTextView"
                android:layout_toRightOf="@id/countryImageView"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/whiteTextColor"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/areaImage"
                android:src="@drawable/ic_area"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:text="Area and Pin-Code"
                android:layout_toRightOf="@id/areaImage"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/areaTextView"
                android:layout_toRightOf="@id/areaImage"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/whiteTextColor"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/bdayImageView"
                android:src="@drawable/ic_birthday"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:text="Birth Date"
                android:layout_toRightOf="@id/bdayImageView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/bdayTextView"
                android:layout_toRightOf="@id/bdayImageView"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/whiteTextColor"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/bloodImageView"
                android:src="@drawable/ic_blood"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:text="Blood group"
                android:layout_toRightOf="@id/bloodImageView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/bloodTextView"
                android:layout_toRightOf="@id/bloodImageView"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/whiteTextColor"
            android:layout_marginTop="5dp" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:id="@+id/genderImageView"
                android:src="@drawable/ic_gender"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:text="Gender"
                android:layout_toRightOf="@id/genderImageView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/genderTextView"
                android:layout_toRightOf="@id/genderImageView"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/blackTextColor"
                android:textSize="14sp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/whiteTextColor"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>